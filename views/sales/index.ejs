                  <tr class="bg-white border-b">
                      <th class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= (i+1) %></th>
                      <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= data[i].prod_nombre%></td>
                      <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= data[i].vta_detalle_cantidad%></td>
                      <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= data[i].vta_detalle_precio_unit%></td>
                      <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= data[i].vta_detalle_importe%></td>
                      <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= data[i].vta_detalle_total%></td>
                      
