                  <tr>
                      <th scope="col" class="text-sm font-medium text-white px-6 py-4">#</th>
                      <th scope="col" class="text-sm font-medium text-white px-6 py-4">Nombre</th>
                      <th scope="col" class="text-sm font-medium text-white px-6 py-4">Cantidad</th>
                      <th scope="col" class="text-sm font-medium text-white px-6 py-4">Precio U</th>
                      <th scope="col" class="text-sm font-medium text-white px-6 py-4">Importe</th>
                      <th scope="col" class="text-sm font-medium text-white px-6 py-4">Total</th>
                    
                  </tr>
              </thead class="border-b">
              <tbody>
